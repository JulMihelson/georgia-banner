---
import { Image } from "astro:assets";
import { getCollection } from "astro:content";
const contacts = await getCollection("contactsge");
---

<ul class=" ">
  {
    contacts.map((item) => (
      <li class="last:max-w-[219px] mb-6">
        <a href={item.data.url} class="flex flex-nowrap gap-4" >
          <Image alt="contact line" width={30} height={30} src={item.data.icon} />
          <div class="text-white text-xl flex flex-wrap">{item.data.text}</div>
        </a>
      </li>
    ))
  }
</ul>
