    class="absolute lg:max-w-[870px] lg:top-[39px] lg:left-[349px] xxs:hidden md:block md:top-[0px] md:left-[77px] md:max-w-[580px]"
    alt="сакартвелло"
    src={name}
  />
  <div
    class="absolute bg-customRed bg-opacity-77 w-[58px] h-[58px] left-[135px] top-[113px] xxs:hidden xs:hidden md:hidden"
  >
  </div>
  <div
    class="absolute z-600 bg-customRed bg-opacity-77 w-[72px] h-[72px] top-[1017px] left-[309px] xxs:hidden xs:hidden md:hidden"
  >
  </div>
  <a class="absolute block w-fit z-30 lg:top-[55px] lg:left-[123px] xxs:top-[30px] xxs:right-[20px] md:top-[39px] md:left-[83px] !md:z-600" href="#">
    <Image
    class="md:max-w-[210px] xxs:max-w-[62px] xxs:max-h-[30px] sm:max-w-[124px] sm:max-h-[60px] !md:z-600 "
    alt="логотип mice and travel"
    src={logo}
  /></a>
