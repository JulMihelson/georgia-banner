    src={mainimage}
  />
  <div
    class="absolute z-2 transform rotate-45 bg-customRed bg-opacity-60 xl:w-[392px] xl:h-[1004px] xl:left-[170px] xl:top-[-260px]  xxs:w-[240px] xxs:h-[210px] xxs:top-[-100px] xxs:left-[0px] xxs:bg-opacity-40 md:w-[190px] md:h-[540px] md:left-[120px] md:top-[-140px]"
  >
  </div>
  
  <div
    class="absolute bg-customRed bg-opacity-77 lg:w-[169px] lg:h-[105px] lg:top-[39px] lg:left-[135px] md:w-[169px] md-h-[105px] md:left-[400px] md:top-[200px] xxs:transform xxs:rotate-45 md:rotate-0  xxs:bg-opacity-55 xxs:top-[250px] xxs:right-[400px] xxs:hidden md:block"
  >
  </div>
  <div
